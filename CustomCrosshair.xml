<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Crosshair>

<Colors>
	<OnTarget>
		<ColorChange>
			<RGB>ff0000</RGB>
			<Brightness>0</Brightness>
			<Saturation>69</Saturation>
			<Contrast>0</Contrast>
		</ColorChange>
		<Glow>
			<RGB>ff0000</RGB>
		</Glow>
	</OnTarget>
	<OffTarget>
		<ColorChange>
			<RGB>F5CB5B</RGB>
			<Brightness>0</Brightness>
			<Saturation>0</Saturation>
			<Contrast>0</Contrast>
		</ColorChange>
		<Glow>
			<RGB>FFFFCB</RGB>
		</Glow>
	</OffTarget>
</Colors>

<Filters>
	<Glow>
		<Visible>false</Visible>
		<Length>8</Length>
		<Strength>1.2</Strength>
	</Glow>
	<InnerShadow>
		<Visible>false</Visible>
	</InnerShadow>
	<OuterShadow>
		<Visible>true</Visible>
	</OuterShadow>
</Filters>

<!--When any gun is pulled out-->
<part state="GUN">
	<!--Show/hide default animated crosshair for that state-->
	<bethesda>true</bethesda>
	<dot>
		<enable>true</enable>
		<size>2</size>
	</dot>
	<circle>
		<enable>false</enable>
		<radius>10</radius>
		<thickness>2</thickness>
	</circle>
	<cross>
		<enable>false</enable>
		<gap>8</gap>
		<length>10</length>
		<thickness>2</thickness>
	</cross>
	
</part>

<!--When using melee and when gun put away-->
<part state="MELEE">
	<!--Show/hide default crosshair for that state-->
	<bethesda>true</bethesda>
	<dot>
		<enable>true</enable>
		<size>3</size>
	</dot>
	<circle>
		<enable>false</enable>
		<radius>10</radius>
		<thickness>2</thickness>
	</circle>
	<cross>
		<enable>false</enable>
		<gap>10</gap>
		<length>14</length>
		<thickness>2</thickness>
	</cross>
</part>

<!--When interacting with something-->
<part state="ACTIVATE">
	<!--Show/hide default animated crosshair for that state-->
	<bethesda>true</bethesda>
	<dot>
		<enable>true</enable>
		<size>2</size>
	</dot>
	<circle>
		<enable>false</enable>
		<radius>6</radius>
		<thickness>4</thickness>
	</circle>
	<cross>
		<enable>false</enable>
		<gap>20</gap>
		<length>4</length>
		<thickness>2</thickness>
	</cross>
</part>

<!--When aiming down iron sight-->
<part state="SIGHT">
	<dot>
		<enable>true</enable>
		<size>2</size>
	</dot>
	<circle>
		<enable>false</enable>
		<radius>10</radius>
		<thickness>2</thickness>
	</circle>
	<cross>
		<enable>false</enable>
		<gap>8</gap>
		<length>10</length>
		<thickness>2</thickness>
	</cross>
</part>

</Crosshair>